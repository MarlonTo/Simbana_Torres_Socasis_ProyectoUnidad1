@using Entities
@model List<Product>
<h3>Lista de productos</h3>
<div class="row">
    <div class="col-md-3">
        <a asp-action="CrearProducto" asp-controller="Productos" class="btn btn-success">
            Crear
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>ID</th>
                    <th>Nombre Producto</th>
                    <th>Categoria</th>
                    <th>Precio unitario</th>
                    <th>Unidades en stock</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var Categoria in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-success" asp-action="CrearProducto" asp-controller="Productos" asp-route-id="@Categoria.ProductID">Editar</a>
                                <a class="btn btn-danger" id="Eliminar" asp-action="EliminarProducto" asp-controller="Productos" asp-route-id="@Categoria.ProductID">Eliminar</a>
                            </td>
                            <td>@Categoria.ProductID</td>
                            <td>@Categoria.ProductName</td>
                            <td>@Categoria.Category.CategoryName</td>
                            <td>@Categoria.UnitPrice</td>
                            <td>@Categoria.UnitsInStock</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay productos disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

