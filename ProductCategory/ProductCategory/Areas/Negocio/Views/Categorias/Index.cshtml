@using Entities
@model List<Category>
<h3>Lista de categorias</h3>
<div class="row">
    <div class="col-md-3">
        <a asp-action="CrearCategoria" asp-controller="Categorias" class="btn btn-success">
            Crear
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var Categoria in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-success" asp-action="CrearCategoria" asp-controller="Categorias" asp-route-id="@Categoria.CategoryID">Editar</a>
                                <a class="btn btn-danger" id="Eliminar" asp-action="EliminarCategoria" asp-controller="Categorias" asp-route-id="@Categoria.CategoryID">Eliminar</a>
                                </td>
                            <td>@Categoria.CategoryID</td>
                            <td>@Categoria.CategoryName</td>
                            <td>@Categoria.Description</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay productos disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

